<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    tools:context=".activity_hub">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="86dp"
        android:layout_marginBottom="144dp"
        android:fontFamily="@font/determination"
        android:text="Mini Games"
        android:textColor="@color/white"
        android:textSize="45sp"
        app:layout_constraintBottom_toTopOf="@+id/jokenpoapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/jokenpoapp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="54dp"
        android:layout_marginEnd="73dp"
        android:layout_marginBottom="79dp"
        android:fontFamily="@font/determination"
        android:text="Jokenpo"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/invesorapp"
        app:layout_constraintEnd_toStartOf="@+id/secretapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/secretapp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="275dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="79dp"
        android:fontFamily="@font/determination"
        android:text="Secret"
        android:textSize="18sp"
        app:layout_constraintBottom_toTopOf="@+id/randomapp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/jokenpoapp"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/invesorapp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="55dp"
        android:layout_marginEnd="71dp"
        android:layout_marginBottom="265dp"
        android:fontFamily="@font/determination"
        android:text="Inversor"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/randomapp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/jokenpoapp" />

    <Button
        android:id="@+id/randomapp"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="58dp"
        android:layout_marginBottom="265dp"
        android:fontFamily="@font/determination"
        android:text="Random"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/invesorapp"
        app:layout_constraintTop_toBottomOf="@+id/secretapp" />

</androidx.constraintlayout.widget.ConstraintLayout>